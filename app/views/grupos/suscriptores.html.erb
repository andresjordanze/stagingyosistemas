<%= render :layout => 'layouts/groups_layout' do%>
<h1>Lista de Suscriptores</h1>
<br>
<br>
<div class="row bs-example bs-example-type">
   <div class="col-lg-1">
  </div>
  <div class="col-lg-8">
    <% @suscriptores.each do |suscriptor| %>
    <% if suscriptor.usuario_id != current_user.id %>
        <div class="well">
          <div class="row">
        <div class="col-lg-8">
                  <table class="table table-striped table-bordered table-hover">
                        <thead>
                          <tr>
                            <th>Nombre:</th>
                            <th>Apellido:</th>
                          </tr>
                        </thead>
                        <tbody>
                          <tr>
                            <td><%= suscriptor.usuario.nombre %></td>
                            <td><%= suscriptor.usuario.apellido %></td>
                          </tr>
                        </tbody>
                  </table>
        </div>
        <div class="col-lg-2">
                    <form class="navbar-form navbar-left" method="get" action=<%=detalle_usuario_path(suscriptor.usuario)%>>
                      <button type="submit" class="btn btn-primary">Ver Informacion</button>
                    </form>
        </div>
        <div class="col-lg-2">
                    <form class="navbar-form navbar-left" method="get" action=<%=borrar_suscripcion_path(suscriptor.id)%> data-confirm="Se eliminara al suscriptor, ¿está seguro?" data-method="delete" >
                      <button type="submit" class="btn btn-danger">Eliminar</button>
                    </form>
        </div>
         </div>
        </div>
    <% end %>
    <% end %>
  </div>
  </div>
<a href="/grupos" class="btn btn-danger">Atras</a>
<%end%>
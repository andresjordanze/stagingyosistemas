<h1>Lista de Eventos</h1>
<br>
<br>
<div class="row bs-example bs-example-type">
   <div class="col-lg-1">
  </div>
  <div class="col-lg-8">
    <% @eventos.each do |evento| %>
    <%if evento.nombre!="Publico"%>
        <div class="well">
          <strong><legend><%=evento.nombre%></legend></strong>
          <div class="row">
              <div class="col-lg-3">
                <h5>Creador:</h5>
                 <div class="row">
                  &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<%= image_tag avatar_tam_url(evento.usuario,100) %>
                </div>
                <div>
                  <h3 style="margin-top:0px;"><%= link_to evento.usuario.nombre_usuario,  evento.usuario %></h3>
                </div>
              </div>
              <div class="col-lg-6">
                  <br>
                  <table class="table table-striped table-bordered table-hover">
                        <thead>
                          <tr>
                            <th>Descripcion</th>
                          </tr>
                        </thead>
                        <tbody>
                          <tr>
                            <td><%=evento.detalle%></td>
                          </tr>
                        </tbody>
                        <thead>
                          <tr>
                            <th>Lugar</th>
                          </tr>
                        </thead>
                        <tbody>
                          <tr>
                            <td><%=evento.lugar%></td>
                          </tr>
                        </tbody>
                        <thead>
                          <tr>
                            <th>fecha y hora</th>
                          </tr>
                        </thead>
                        <tbody>
                          <tr>
                            <td><%=evento.fecha%> <%=evento.hora%></td>
                          </tr>
                        </tbody>
                        <thead>
                          <tr>
                            <th>Grupo:</th>
                          </tr>
                        </thead>
                        <tbody>
                          <tr>
                            <td><%=evento.grupo.nombre%></td>
                          </tr>
                        </tbody>
                  </table>
                 
              </div>
              
          </div>
        </div>
    <% end %>
    <% end %>
    <center><%= paginate @eventos %></center>
  </div>
</div>

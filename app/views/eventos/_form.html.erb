<%= form_for(@evento) do |f| %>
  <% if @evento.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@evento.errors.count, "error") %> prohibited this evento from being saved:</h2>

      <ul>
      <% @evento.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class ='bs-example form-horizontal'>
<div class="row">
          <div class="col-lg-10">
            <div class="well">
              <fieldset>
              <legend>Ingrese los datos del evento </legend>

  <div class="form-group">
      <label for="inputContent" class="col-lg-2 control-label">Nombre:</label>
       <div class="col-lg-10">
       <%= f.text_field :nombre, :class=>'form-control', :placeholder=>'Nombre Evento', :maxlength => 50 , :title => "El nombre del evento es obligatorio, Por favor rellene este campo", :required=>true %>
       </div>
   </div>
  <div class="form-group">
      <label for="inputContent" class="col-lg-2 control-label">Detalle:</label>
       <div class="col-lg-10">
        <%= f.text_area :detalle, :class=>'form-control',:rows=>'6', :placeholder=>'Contenido', :maxlength => 500,:required=>true %>
       </div>
   </div>
   <div class="form-group">
      <label for="inputContent" class="col-lg-2 control-label">Lugar:</label>
       <div class="col-lg-10">
       <%= f.text_field :lugar, :class=>'form-control', :placeholder=>'Lugar del Evento', :maxlength => 50 , :title => "El lugar del evento es obligatorio, Por favor rellene este campo",:required=>true %>
       </div>
   </div>
<div class="form-group">
  <label for="inputDate" class="col-lg-2 control-label">Fecha:</label>
      <div class="col-lg-6">
        <div id="datetimepicker2" class="input-group">
          <%= f.text_field :fecha, :class=>'form-control input-append',:"data-format"=>'dd/MM/yyyy', :placeholder=>'Fecha', :style=>"border-bottom-left-radius: 4px;  border-top-left-radius: 4px;"%>
            <span id="dateButton" class="input-group-addon add-on" style="background-color: #256188; cursor:pointer;">
                <i data-time-icon="icon-time" data-date-icon="icon-calendar icon-white">
                </i>
            </span>
        </div>
      </div>
</div>
<div class="form-group">
              <label for="inputTime" class="col-lg-2 control-label">Hora:</label>
              <div class="col-lg-6">
                <div class="input-group bootstrap-timepicker-component">
                    <%= f.text_field :hora, :class=>'form-control timepicker-default', :placeholder=>'Hora del evento', :style=>"border-bottom-left-radius: 4px;  border-top-left-radius: 4px;"%>
                    <span id="timeButton" class="input-group-addon add-on " style="background-color: #256188;" >
                      <i class="icon-time icon-white"></i>
                    </span>
                </div>
              </div>
            </div>
   <div class="form-group">
          <label for="inputGroup" class="col-lg-2 control-label">Grupo:</label>
          <div class="col-lg-10">
                      <%=f.collection_select(:grupo_id, Grupo.all, :id, :nombre, :class=>'form-control')%>
     </div>
    </div>
   <div class="form-group">
       <label for="inputEmail" class="col-lg-2 control-label">Privacidad</label>
       <div class="col-lg-10">
      <select class="form-control" id="evento_estado" name="evento[estado]">
      <option value= "true">Publico</option>
      <option value = "false">Privado</option>
      </select>
  </div>
  </div>
   <div class="form-group">
  <div class="col-lg-10 col-lg-offset-2">
  <input type="submit" value="Guardar evento" class="btn btn-success">
		</div>
  	</div>
   </div>
   </div>
   </div>
   </div>
<% end %>

